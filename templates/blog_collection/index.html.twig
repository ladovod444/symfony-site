{% extends 'base.html.twig' %}

{% block title %}BlogCollection index{% endblock %}

{% block body %}
    <h1>BlogCollection index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog_collection in blog_collections %}
            <tr>
                <td>{{ blog_collection.id }}</td>
                <td>{{ blog_collection.name }}</td>
                <td>
                    <a href="{{ path('app_blog_collection_show', {'id': blog_collection.id}) }}">show</a>
                    <a href="{{ path('app_blog_collection_edit', {'id': blog_collection.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_blog_collection_new') }}">Create new</a>
{% endblock %}
